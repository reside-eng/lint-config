{
  "name": "lint-config",
  "description": "Configuration for various lint tools",
  "author": "Side Platform Engineering",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/lint-config.git"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "lerna run test$@",
    "test:cov": "lerna run test:cov",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types:check": "lerna run types:check"
  },
  "prettier": "@side/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "husky": "9.1.7",
    "lerna": "8.1.3",
    "pinst": "3.0.0",
    "prettier": "3.4.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.3"
}
