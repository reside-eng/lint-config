{
  "name": "lint-config",
  "description": "Configuration for various lint tools",
  "author": "Side Platform Engineering",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/lint-config.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "clean": "lerna clean",
    "lint": "eslint '**/*.js' .eslintrc.js --ignore-pattern='!.eslintrc.js'",
    "format": "yarn lint --fix",
    "test": "echo No Tests for lint-config"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.5",
    "lerna": "3.20.2",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
