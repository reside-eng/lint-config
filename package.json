{
  "name": "lint-config",
  "description": "Configuration for various lint tools",
  "author": "Side Platform Engineering",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/lint-config.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "clean": "lerna clean",
    "lint": "eslint '**/*.js' .eslintrc.js --ignore-pattern='!.eslintrc.js'",
    "test": "node packages/commitlint-config && node packages/eslint-config-base && node packages/eslint-config-base/core && node packages/eslint-config-react && node packages/eslint-config-react/hooks && node packages/eslint-config-prettier && node packages/eslint-config-prettier/react && node packages/eslint-config-cypress && node packages/eslint-config-jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "11.0.0",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.2.0",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.2",
    "prettier": "2.2.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
