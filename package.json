{
  "name": "lint-config",
  "description": "Configuration for various lint tools",
  "author": "Side Platform Engineering",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/lint-config.git"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "if [ -d \".git\" ]; then husky install; else echo Skipping Husky install; fi",
    "test": "lerna run test$@",
    "test:cov": "lerna run test:cov",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "types:check": "lerna run types:check"
  },
  "prettier": "@side/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "husky": "8.0.3",
    "lerna": "7.4.1",
    "prettier": "3.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.0.0"
}
