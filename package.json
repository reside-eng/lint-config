{
  "name": "lint-config",
  "description": "Configuration for various lint tools",
  "author": "Side Platform Engineering",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/lint-config.git"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint '**/*.js' .eslintrc.js --ignore-pattern='!.eslintrc.js'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "turbo run build && pnpm publish -r"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "prettier": "./packages/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "17.4.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1"
  },
  "dependencies": {
    "@changesets/cli": "2.26.0"
  }
}
